page {
  padding-top: 20px;
  background-color: #fff;
}

.content {
  padding: 24rpx;
  background-color: var(--color-info);
  border-radius: 6rpx;
}
.date {
  color: #fff;
  font-size: 28rpx;
}
.text {
  padding-top: 6px;
  font-size: 28rpx;
  line-height: 1.4;
  color: #f1f1f1;
}

.content.is-new {
    background-color: var(--color-primary);
}

.content.is-important {
    background-color: var(--color-warning);
}