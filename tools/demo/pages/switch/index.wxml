<demo-card title="基础用法">
  <m-switch value="{{ checked }}" bind:change="onChange" />
</demo-card>

<demo-card title="禁用状态">
  <m-switch value="{{ false }}" disabled />
</demo-card>

<demo-card title="加载状态">
  <m-switch value="{{ false }}" loading />
</demo-card>

<demo-card title="自定义颜色">
  <m-switch 
    value="{{ checked }}"
    active-color="#07c160"
    inactive-color="#ee0a24"
    bind:change="onChange"
  />
</demo-card>

<demo-card title="异步控制">
  <m-switch value="{{ checkedAsync }}" loading="{{ loading }}" bind:change="onAsyncChange" />
</demo-card>


<m-modal id="modal" />