.m-timeline {
  display: flex;
}

.m-timeline.is-last .m-timeline__line::after {
  display: none;
}

.m-timeline .m-timeline__line {
  position: relative;
  width: 120rpx;
  min-height: 80rpx;
  display: flex;
  justify-content: center;
  color: var(--color-text-secondary, #909399);
  font-size: 28rpx;
}

.m-timeline .m-timeline__line::after {
  position: absolute;
  top: 44rpx;
  width: 1px;
  bottom: 10rpx;
  content: " ";
  background: var(--color-border, #dcdee2);
  transform: translateY(0.5);
}

.m-timeline .m-timeline__content {
  flex: 1;
  width: 0;
  margin-top: 16rpx;
  margin-bottom: 46rpx;
  margin-right: 32rpx;
}
